%html{lang: I18n.locale}
  %head
    = render 'layouts/html_head'

  %body
    = render 'layouts/navigation'
    .row
      .columns.small-12
        = render 'sub_navigation'
    .row.spacer
      .row{"data-equalizer" => ""}
        .columns.hashgrid-e4
          = render 'navigation'
        .columns.hashgrid-focus{"data-equalizer-watch" => ""}
          = yield
        .columns.hashgrid-e2
          = render 'node_controls'

  = javascript_include_tag 'application'


