:ruby
  all_related_nodes = node.all_related_nodes

%ul.tabs{"data-tab" => ""}
  - node.association_methods.each do |am|
    %li.tab-title
      %a{:href => "#related_#{am}"}
        = am

.tabs-content
  - node.association_methods.each do |am|
    .content{id: "related_#{am}"}
      %ul.inline-list
        - all_related_nodes[am].each do |related_node|
          %li
            = render 'small_node', node: related_node, link_path: url_for(related_node)
