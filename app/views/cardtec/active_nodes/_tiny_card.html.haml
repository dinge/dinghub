:ruby
  link_path ||= current_show_path(node)

.card.tiny-card{class: dom_class(node, :card), 'data-card-path' => current_show_path(node), 'data-card-uuid' => node.uuid}
  .card-header
    %h5
      = link_to(link_path) do
        = node.human_title
  .card-body
    - if node.image?
      .main-image
        = link_to(link_path) do
          = image_tag(node.image.tiny.url)

